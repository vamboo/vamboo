.component
  display flex
  flex 1 0
  flex-direction column

  ul
    display flex
    padding 0
    margin 0
    list-style none

    &:first-child
      flex 0 1
      flex-direction row

      .tab
        background-color white

      .active-tab
        background-color #f2f2f2

      li
        flex 1 0
        border inset 1px #a3a3a3
        text-align center
        padding 10px

        &:hover
          background-color #f2f2f2

        input[type="radio"]
          display none

    &:last-child
      flex 1 0
      flex-direction column

      border inset 1px #a3a3a3
      border-radius 0 0 0.2em 0.2em
      background-color white
      overflow-y scroll
      height 200px

      li
        flex 0 1
        border-bottom inset 1px #a3a3a3
        list-style none
        margin 15px 35px 0 35px

.selected
  font-weight bold
