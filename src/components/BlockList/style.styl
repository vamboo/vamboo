.component
  flex 0 0 300px
  color black

  ul
    &:first-child
      list-style none
      padding 0
      margin 0

      li
        border inset 2px black
        text-align center
        display inline
        background-color white
        padding 3px

        &:hover
          background-color #c4c4c4

    &:last-child
      li
        border inset 2px black
        margin 0
        width 200px
